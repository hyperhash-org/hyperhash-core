[bitcoind]
rpc_host = "127.0.0.1"
rpc_port = 8332
rpc_user = "hyperhash"           # set the real value on VM
rpc_pass = "hyperhash_pass_123"  # set the real value on VM
network  = "mainnet"

[payout]
# Use `bitcoin-cli getaddressinfo` and copy the scriptPubKey
script_pubkey_hex = "CHANGE_ME"
coinbase_tag = "/HyperHash/"

[jobs]
refresh_ms = 1000
prebuild_next_jobs = 2
stale_kill_on_tip = true
deterministic_extranonce = true

[lanes]
sv1_listen = "0.0.0.0:3333"
sv2_listen = "0.0.0.0:34254"

[submitter]
peers = ["127.0.0.1:8332"]
warm_sockets = true

[bus]
nats_url = "127.0.0.1:4222"

[flags.infra]
tipsentry = true
jobprebuilder = true
hotpath_notifier = true
parallel_submitter = true
rtp = true
sbs = true
pbs = true

[flags.hyperlane]
midstate_reuse = true
rolltime = "auto"
zero_gate = true
rapid_dispatch = true
aer = true
vector_validate = "auto"
dedup_global = true